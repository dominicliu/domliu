.carousel-container
	#background-carousel.carousel.slide(data-ride='carousel')
		// Indicators
		ol.carousel-indicators
			li.active(data-target='#background-carousel', data-slide-to='0')
			li(data-target='#background-carousel', data-slide-to='1')
			li(data-target='#background-carousel', data-slide-to='2')
		// Wrapper for slides
		.carousel-inner(role='listbox')
			.item.active
				.fill(style="background-image:url('/images/background/IMG_9247.jpg')")
				.carousel-caption
					span Photography: Valley in the Clouds
					sp
			.item
				.fill(style="background-image:url('/images/background/IMG_3408.jpg')")
				.carousel-caption
					span Photography: New Town Hall, Munich
					sp
			.item
				.fill(style="background-image:url('/images/background/IMG_9250_1.jpg')")
				.carousel-caption
					span Photography: The Green Valley
					sp
		// Controls
		a.left.carousel-control(data-target='#background-carousel', role='button', data-slide='prev')
			span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
			span.sr-only Previous
		|   
		a.right.carousel-control(data-target='#background-carousel', role='button', data-slide='next')
			span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
			span.sr-only Next
.outer
