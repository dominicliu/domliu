.top-offset
	.container
		h1
			span.fa.fa-cogs
			| &nbsp;&nbsp;Skills
		p
			input(type="text", class="form-control" ng-model="search", placeholder="Search")
		sp
		sp
		.row
			.col-sm-6.col-md-4.col-lg-3(class="velocity-transition-slideRightIn"
				data-velocity-opts="{ stagger: 30 }" ng-repeat="skill in skills | filter : searchFilter")
				.skill
					table
						tr
							td
								img(ng-src="/images/skills/{{skill.image}}")
							td
								p.name {{skill.name}}
								star-rating(ng-model="skill.rating" readonly="true")
