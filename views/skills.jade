.top-offset
	.container
		h1
			span.fa.fa-cogs
			| &nbsp;&nbsp;Skills
		p
			input(type="text", class="form-control" ng-model="search", placeholder="Search")
		sp
		sp
		.row
			.col-sm-6.col-md-4.col-lg-3(ng-repeat="skill in skills | filter : searchFilter")
				.skill
					table
						tr
							td
								img(ng-src="/images/skills/{{skill.image}}")
							td
								p.name {{skill.name}}
								star-rating(ng-model="skill.rating" readonly="true")
								p.extras(ng-if="skill.extras.length")
									span(uib-tooltip="{{skill.extras.join(' + ')}}")
										span.fa.fa-plus
										| &nbsp;&nbsp; Extras
								p(ng-if="skill.hasWorks")
									a(ui-sref="portfolio({search: skill.name})")
										span.fa.fa-briefcase
										| &nbsp;&nbsp;Portfolio